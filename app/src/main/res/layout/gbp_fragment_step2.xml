<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/gbp_default_item_padding"
    tools:context=".ui.fragment.onboardingstep.StepFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView style="@style/TitleTextStyle" />

    <LinearLayout
        android:layout_marginTop="@dimen/gbp_default_item_margin_lager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gbp_img_s2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gbp_default_item_margin_lager"
            android:maxLines="3"
            android:padding="@dimen/gbp_default_item_margin_lager"
            android:text="@string/gbp_common_default_text" />
    </LinearLayout>

</LinearLayout>