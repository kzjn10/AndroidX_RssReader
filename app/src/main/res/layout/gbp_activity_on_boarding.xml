<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.onboarding.OnBoardingActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/gbp_oba_btn_skip"
            style="@style/SkipButtonStyle" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/gbp_oba_vp_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


    <dev.anhndt.gobear.widget.circleindicator.CirclePageIndicator
        android:id="@+id/gbp_oba_ci_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/gbp_default_item_padding"
        app:fillColor="@color/colorPrimaryDark"
        app:strokeColor="@color/colorPrimaryDark" />


</LinearLayout>