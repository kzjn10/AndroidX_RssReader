<resources>


    <!-- Title text style  -->
    <style name="TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:padding">@dimen/gbp_default_item_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Skip button style  -->
    <style name="SkipButtonStyle" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:text">@string/gbp_common_text_skip</item>
        <item name="android:layout_margin">@dimen/gbp_default_item_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Switch style -->
    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/gbp_default_item_padding</item>
        <item name="android:gravity">left</item>
        <item name="android:theme">@style/DefaultSwitchCompatStyle</item>
    </style>

    <!-- Default style -->
    <style name="DefaultButtonStyle"  parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/gbp_custom_button_background</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Default SwitchCompat item style -->
    <style name="DefaultSwitchCompatStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />


</resources>
